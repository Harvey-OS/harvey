TARGMODEL=	Posix
TARGSHTYPE=	sh
CPUS=		sparc

O=		o
OS=		o

AR=		ar
ARFLAGS=	cvru

YACC=		iyacc
YFLAGS=		-d

AS=             gcc
ASFLAGS=        -c

CC=gcc
CFLAGS=	-c\
		-g\
		-O\
		-munaligned-doubles\
		-threads\
		-Wimplicit\
		-I$ROOT/Solaris/sparc/include\
		-I$ROOT/include\
		-I/usr/openwin/share/include\

ANSICPP=
LD=		gcc
LDFLAGS=-L/usr/openwin/lib\

SYSLIBS=
EMULIBS=	-lthread -lsocket -lm -lX11 -lXext -lnsl -lposix4


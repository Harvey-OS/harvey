#!/bin/bash
set -e

trap : 2

$HARVEY/linux_amd64/bin/centre -i "" -ninep-dir=$HARVEY &
centrepid=$!

export machineflag=raspi3

read -r cmd <<EOF
$kvmdo qemu-system-aarch64 -s -m 1G \
-serial stdio \
--machine $machineflag \
-append "service=cpu nobootprompt=tcp maxcores=1024 fs=10.0.2.2 auth=10.0.2.2 nvram=/boot/nvram nvrlen=512 nvroff=0 acpiirq=1" \
-kernel $HARVEY/sys/src/9/aarch64/harvey $*
EOF

echo $cmd
eval $cmd

kill $centrepid
wait


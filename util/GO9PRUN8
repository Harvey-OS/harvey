$HARVEY/util/ufs -root=$HARVEY &
pids="$!"

for port in `seq 5550 5557`; do
	sudo qemu-system-x86_64 -cpu Opteron_G1 -smp 1 -m 1024  \
		-enable-kvm \
		--machine pc \
		-net nic,model=rtl8139 \
		-net user,hostfwd=tcp::"$port"-:1522 \
		-kernel harvey.32bit $* </dev/null &
	pids="$! $pids"
done

echo $pids

die() {
	sudo kill $pids
}

trap die 2
wait


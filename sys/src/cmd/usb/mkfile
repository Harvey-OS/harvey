</$objtype/mkfile

DIRS=\
	lib\
	disk\
	kb\
	audio\
	usbd\
	ether\
	print\
#	knx\

UPDATE=\
	mkfile\

default:V: all

none:VQ:
	echo mk all, install, installall, clean, nuke, or update

all clean nuke:VQ:
	for (i in $DIRS) @{
		cd $i
		mk $target
	}

install installall:V:
	for (i in $DIRS) @{
		cd $i
		mk $target
	}
	cp usbfat: /rc/bin
	cp probe /$objtype/bin/usb/probe

update:V:
	update $UPDATEFLAGS $UPDATE
	for (i in $DIRS) @{
		echo update $i
		cd $i
		mk 'UPDATEFLAGS='$"UPDATEFLAGS update
	}

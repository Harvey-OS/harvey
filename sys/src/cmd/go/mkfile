</$objtype/mkfile
#
#		programs
#
DIRS=`{cat commands | awk '{print $1}'}

#</sys/src/cmd/mkmany

all:V:	$DIRS

$DIRS:V:
	if (test -e /bin/go) {
		for (i in $DIRS) @{
			echo BUILD $i
			ls $i
			cd $i
			GOARCH=$objtype go build
		} 
	}
	if not {
		echo No go, skipping
	}

install:V:	installdirs

installdirs:V:
	if (test -e /bin/go) {
		for (i in $DIRS) @{
			echo INSTALL $i
			ls $i
			cd $i
			GOARCH=$objtype go build -o /$objtype/bin/ .
		}
	}
	if not {
		echo No go, skipping
	}

cleandirs:V:
	for (i in $DIRS) @{
		echo clean $i
		cd $i
		rm -f $i
	}

update:V:
	for (i in $DIRS) @{
		echo TODO: update $i
		cd $i
		echo update not yet implemented
	}

clean:V:
	mk cleandirs

nuke:V:	cleandirs

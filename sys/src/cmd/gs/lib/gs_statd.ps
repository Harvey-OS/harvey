   /flsa /flse /halfletter
   /isob0 /isob1 /isob2 /isob3 /isob4 /isob5 /isob6
   /jisb0 /jisb1 /jisb2 /jisb3 /jisb4 /jisb5 /jisb6
   /pa4
%END SIZES
 ] cvlit readonly def


WIN=x11
OS=posix

CC=cc
CFLAGS=-g -c -DIRIX
BIN=/home/rsc/bin/Irix
TARG=drawterm
O=o
LD=cc
LDFLAGS=-g -o drawterm 
AS=as
ASFLAGS=-c -mips2

DEVIP=devip-unix
DEVFS=devunixfs
OSFILES=lock-irix.$O md-iprint.$O
LIBS=-lm -L/usr/X11R6/lib -lX11 -lpthread

ml-%.$O:	./libmemlayer/%.c
	$CC $CFLAGS -o ml-$stem.o ./libmemlayer/$stem.c

md-%.$O:	./libmemdraw/%.c
	$CC $CFLAGS -o md-$stem.o ./libmemdraw/$stem.c

d-%.$O:	./libdraw/%.c
	$CC $CFLAGS -o d-$stem.o ./libdraw/$stem.c


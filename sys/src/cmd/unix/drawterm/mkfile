	proc.$O\
	qio.$O\
	readn.$O\
	ref.$O\
	rune.$O\
	rwlock.$O\
	screen-$WIN.$O\
	syscall.$O\
	tabs.$O\
	term.$O\
	tokenize.$O\
	$OS.$O\
	utflen.$O\

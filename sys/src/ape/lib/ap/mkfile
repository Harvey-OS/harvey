APE=/sys/src/ape
<$APE/config

DIRS=gen math plan9 posix stdio syscall

default:V:	all

install all:V:
	for(i in $DIRS)@{
		echo $i
		cd $i
		mk $MKFLAGS $target
	}

installall:V:
	for(objtype in $CPUS) mk $MKFLAGS install


clean nuke:V:
	for(i in $DIRS $CPUS)@{
		echo $i
		cd $i
		mk $MKFLAGS $target
	}

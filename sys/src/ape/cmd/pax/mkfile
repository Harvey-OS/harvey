APE=/sys/src/ape
<$APE/config

TARG=pax
OFILES=pax.$O\
	append.$O\
	buffer.$O\
	cpio.$O\
	create.$O\
	extract.$O\
	fileio.$O\
	link.$O\
	list.$O\
	mem.$O\
	namelist.$O\
	names.$O\
	pass.$O\
	pathname.$O\
	port.$O\
	regexp.$O\
	replace.$O\
	tar.$O\
	ttyio.$O\
	warn.$O\
	wildmat.$O\

HFILES=config.h\
	func.h\
	limits.h\
	port.h\
	pax.h\

BIN=$APEBIN
</sys/src/cmd/mkone

CFLAGS =-c -D_POSIX_SOURCE -B -J -DPATH_MAX=1024

$O.out:	$OFILES $LIB
	$LD $LDFLAGS -o $target $prereq -lv

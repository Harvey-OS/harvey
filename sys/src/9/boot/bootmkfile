BOOTDIR=../boot
BOOTLIB=$BOOTDIR/libboot.a$O

BOOTFILES=\
	bootauth.$O\
	aux.$O\
	boot.$O\
	bootcache.$O\
	bootip.$O\
	local.$O\
	embed.$O\
	settime.$O\
	sac.$O\
	paq.$O\
	parts.$O\
	printstub.$O\
	usb.$O\

$BOOTLIB(%.$O):N:	%.$O

$BOOTLIB:	${BOOTFILES:%=$BOOTLIB(%)}
	names=`{membername $newprereq}
	ar vu $BOOTLIB $names
	rm $names

$BOOTFILES:	$BOOTDIR/boot.h

%.$O:	$BOOTDIR/%.c
	$CC -I$BOOTDIR $CFLAGS $BOOTDIR/$stem.c

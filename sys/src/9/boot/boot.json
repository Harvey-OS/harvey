{
	"libboot": {
		"Cflags": [
			"-g",
			"-Wall",
			"-Wno-missing-braces",
			"-Wno-parentheses",
			"-Wno-unknown-pragmas",
			"-O0",
			"-static",
			"-fplan9-extensions",
			"-mno-red-zone",
			"-ffreestanding",
			"-fno-builtin",
			"-mcmodel=small"
		],
		"Include": [
			"/sys/src/lib.json"
		],
		"Install": "/sys/src/9/boot",
		"Library": "libboot.a",
		"Pre": [
			"mksys -o bootcpu.c '-mode=bootcpu.c' $HARVEY/sys/src/sysconf.json",
			"[ ! -f bootcpu.elf.out ] || rm *.elf.out"
		],
		"SourceFiles": [
			"aux.c",
			"bootauth.c",
			"boot.c",
			"bootcache.c",
			"bootip.c",
			"bootcpu.c",
			"bootrc.c",
			"embed.c",
			"local.c",
			"paq.c",
			"settime.c"
		]
	}
}

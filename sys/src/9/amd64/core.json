{
	"core": {
		"ToolOpts": {
			"/usr/bin/clang": [
				"-mno-implicit-float"
			]
		},
		"Cflags": [
			"-mcmodel=kernel",
			"-O0",
			"-static",
			"-mno-red-zone",
			"-ffreestanding",
			"-fno-builtin",
			"-DKERNDATE=1433623937",
			"-g",
			"-Wall",
			"-Werror",
			"-W",
			"-Wno-sign-compare",
			"-Wno-missing-field-initializers",
			"-Wno-unused-parameter",
			"-Wno-unused-function",
			"-Wno-missing-braces",
			"-Wno-parentheses",
			"-Wno-unknown-pragmas",
			"-D__HARVEY__",
			"-U_LINUX", "-U__linux__",
			"-I", "/sys/src/9/amd64",
			"-I", "/sys/src/9/port",
			"-I", "/sys/src/libc/9syscall"
		],
	    "NoCFlags": [
			"-Werror"
		],
		"Libs": [
			"/$ARCH/lib/klibacpi.a",
			"/$ARCH/lib/klibmemlayer.a",
			"/$ARCH/lib/klibmemdraw.a",
			"/$ARCH/lib/klibc.a",
			"/$ARCH/lib/klibdraw.a",
			"/$ARCH/lib/klibip.a",
			"/$ARCH/lib/klibsec.a"
		],
		"Oflags": [
			"-z",
			"max-page-size=0x1000",
			"-nostdlib",
			"-g",
			"-T",
			"kernel.ld"
		],
		"Post": [
			"OBJCOPY=objcopy; $TOOLPREFIX$OBJCOPY -I elf64-x86-64 -O elf32-i386 harvey harvey.32bit",
			"cp harvey.32bit $HARVEY/cfg/pxe/tftpboot",
			"OBJDUMP=objdump; $TOOLPREFIX$OBJDUMP -S harvey > harvey.asm"
		],
		"Pre": [
			"mksys -o systab.c '-mode=systab.c' $HARVEY/sys/src/sysconf.json",
			"mksys -o errstr.h '-mode=errstr.h' $HARVEY/sys/src/sysconf.json"
		],
		"Projects": [
			"clean.json",
			"../boot/bootconf.json",
			"inith.json",
			"/sys/src/libacpi/acpica/klibacpi.json",
			"/sys/src/libmemdraw/klibmemdraw.json",
			"/sys/src/libdraw/klibdraw.json"
		],
		"SourceFiles": [
			"entry.S",
			"vsvm.c",
			"l64v.S",
			"l64fpu.S",
			"cpuid$ARCH.S",
			"l64acidt.S",
			"l64idt.S",
			"l64vsyscall.S",
			"acore.c",
			"apic.c",
			"arch.c",
			"archamd64.c",
			"asm.c",
			"backtrace.c",
			"../port/devbridge.c",
		        "coreboot.c",
			"ctype.c",
			"devarch.c",
			"../port/devdraw.c",
			"../port/devmouse.c",
			"../port/devpci.c",
			"devpmc.c",
			"fpu.c",
			"i8254.c",
			"i8259.c",
			"ioapic.c",
			"../port/log.c",
			"main.c",
			"map.c",
			"memory.c",
			"mmu.c",
			"mp.c",
			"msi.c",
			"multiboot.c",
			"physalloc.c",
			"pmcio.c",
			"qmalloc.c",
			"sipi.c",
			"syscall.c",
			"systab.c",
			"tcore.c",
			"trap.c",
			"../port/usbehci.c"

		]
	}
}

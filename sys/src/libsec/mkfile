</$objtype/mkfile

DIRS=port 386 alpha arm mips power

default:V:	all

install all:V:
	for(i in port $objtype)@{
		echo $i
		cd $i
		mk $MKFLAGS $target
	}

clean nuke:V:
	for(i in $DIRS)@{
		echo $i
		cd $i
		mk $MKFLAGS $target
	}

update:V:
	for(i in $DIRS)@{
		echo $i
		cd $i
		mk $MKFLAGS update
	}
	update $UPDATEFLAGS /386/lib/libsec.a

installall:V:
	for(objtype in $CPUS) mk $MKFLAGS install

everything:V:
	rm -f */*.[012456789kvx]
	for(objtype in 386)@{
		echo $objtype
		mk $MKFLAGS install
	}
	rm -f */*.[012456789kvx]

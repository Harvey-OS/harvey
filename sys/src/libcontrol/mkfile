</$objtype/mkfile

LIB=/$objtype/lib/libcontrol.a

FILES=\
	box\
	button\
	cache\
	control\
	entry\
	group\
	keyboard\
	label\
	menu\
	radiobutton\
	scribble\
	slider\
	tabs\
	text\
	textbutton\

HFILES=/sys/include/draw.h\
	/sys/include/mouse.h\
	/sys/include/keyboard.h\
	/sys/include/control.h\
	group.h

CFILES=${FILES:%=%.c}

OFILES=${FILES:%=%.$O}

UPDATE=mkfile\
	/386/lib/libcontrol.a\
	$HFILES\
	$CFILES\

</sys/src/cmd/mksyslib

$OFILES: $HFILES

#!/bin/rc
# creates the index used by lookman
>index
for(i in /sys/man/[0-9]*/[a-z0-9:]*){
	p=`{echo $i | sed 's@/sys/man/\([^ ]\)/\([^ ]*\)$@\2(\1)@'}
	deroff -w < $i |
	tr 'A-Z' 'a-z' |
	sort -u |
	comm -23 - junkwords |
	sed 's@$@	'$p'@' >>index		# stick file name on end of line
}
sort -o index index

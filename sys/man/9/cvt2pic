[
.I file
]
.PP
.B fb/face2pic
[
.I facefile
]
.PP
.B fb/gif2pic
[
.B -m
]
[
.B -s
.I image
] [
.I file
]
.PP
.B fb/jpg2pic
.I file
.PP
.B fb/nasa2pic
.I file
.PP
